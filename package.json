{
  "name": "myroot",
  "dependencies": {
    "npm-watch": "^0.11.0",
    "playwright": "^1.42.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2"
  },
  "scripts": {
    "watch": "npm-watch",

    "format": "#npx prettier --write '*/src/**/*.{ts,svelte}' --config=.prettierrc.yaml",
    "buildCF": "npm run build -w=shared/ && npm run build -w=supabase-sveltekit/",
    "buildShared": "npm run build -w=shared/",
    "test": "npx playwright test",
    "testdocker": "docker run --env-file=.testenv -e COMMIT_UUID=$COMMIT_UUID --ipc=host --init -ti -v ./tests:/usr/src/tests mcr.microsoft.com/playwright:v1.42.1 /bin/bash -c 'cd /usr/src && npm install -D @playwright/test && npx playwright test'"
  },
  "watch": {
    "format": {
      "patterns": [
        "shared/src",
        "fcextension/src",
        "supabase-sveltekit/src"
      ],
      "extensions": [
        "ts"
      ]
    },
    "buildShared": {
      "patterns": [
        "shared/src/lib"
      ],
      "extensions": [
        "ts",
        "js",
        "svelte"
      ]
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.25"
  },
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "sextension",
    "supabase-sveltekit",
    "shared"
  ]
}

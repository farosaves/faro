{
  "name": "myroot",
  "dependencies": {
    "npm-watch": "^0.11.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2"
  },
  "scripts": {
    "watch": "npm-watch",
    "format": "npx prettier --write */src/**/*.ts --config .prettierrc"
  },
  "watch": {
    "format": {
      "patterns": [
        "*/src"
      ],
      "extensions": [
        "ts"
      ]
    }
  }
}

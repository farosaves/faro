{
  "name": "myroot",
  "dependencies": {
    "devalue": "^4.3.2",
    "lz-string": "^1.5.0",
    "nodemon": "^3.1.0",
    "npm-watch": "^0.11.0",
    "playwright": "^1.42.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "svelte-persisted-store": "^0.9.1"
  },
  "scripts": {
    "watch": "npm-watch",
    "checkshared": "svelte-check --workspace=shared/",
    "checkss": "svelte-check --workspace=supabase-sveltekit/",
    "checksext": "svelte-check --workspace=sextension/",
    "format": "#npx prettier --write '*/src/**/*.{ts,svelte}' --config=.prettierrc.yaml",
    "b": "npm run b -w=sextension/ #&& npm run bz -w=sextension/ && npm run build -w=supabase-sveltekit/",
    "buildShared": "npm run build -w=shared/",
    "test": "npx playwright test",
    "testdocker": "docker run --env-file=.testenv -e COMMIT_UUID=$COMMIT_UUID --ipc=host --init -ti -v ./tests:/usr/src/tests mcr.microsoft.com/playwright:v1.42.1 /bin/bash -c 'cd /usr/src && npm install -D @playwright/test && npx playwright test'"
  },
  "watch": {
    "format": {
      "patterns": [
        "shared/src",
        "fcextension/src",
        "supabase-sveltekit/src"
      ],
      "extensions": [
        "ts"
      ]
    },
    "buildShared": {
      "patterns": [
        "shared/src/lib"
      ],
      "extensions": [
        "ts",
        "js",
        "svelte"
      ]
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "immer": "^10.0.4",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.3.1"
  },
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "sextension",
    "supabase-sveltekit",
    "shared"
  ]
}

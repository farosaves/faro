{
    "manifest_version": 3,
    "name": "Flashcardize",
    "version": "0.2",
    "description": "Easily create flashcards while browsing",
    "action": {
      "default_popup": "index.html",
      "default_icon": "hello_extensions.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  

